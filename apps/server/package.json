{
  "name": "@usefaz/server",
  "description": "GraphQL Server template",
  "private": true,
  "version": "1.0.0",
  "license": "ISC",
  "scripts": {
    "start": "knex migrate:latest && node build/index.js",
    "start:dev": "yarn migrate && env-cmd tsnd -r tsconfig-paths/register --inspect=0.0.0.0 --transpile-only src/index.ts",
    "build:server": "babel src -d build --extensions \".ts\"",
    "build:shared": "yarn workspace @usefaz/shared build",
    "build": "yarn build:server && yarn build:shared",
    "migrate": "env-cmd knex migrate:latest",
    "migrate:make": "env-cmd knex migrate:make",
    "seed:make": "env-cmd knex seed:make",
    "seed": "env-cmd knex seed:run",
    "rollback": "env-cmd knex migrate:down",
    "rollback:all": "env-cmd knex migrate:rollback --all"
  },
  "dependencies": {
    "@babel/runtime": "^7.17.9",
    "@koa/cors": "^3.3.0",
    "@koa/router": "^10.1.1",
    "@usefaz/shared": "*",
    "bcryptjs": "^2.4.3",
    "core-js": "^3.22.1",
    "dayjs": "^1.11.0",
    "glob": "^8.0.1",
    "graphql": "^16.3.0",
    "graphql-relay": "^0.10.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^1.0.5",
    "koa": "^2.13.4",
    "koa-body": "^4.2.0",
    "koa-compress": "^5.1.0",
    "koa-graphql": "^0.12.0",
    "koa-mount": "^4.0.0",
    "koa-static": "^5.0.0",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "pg": "^8.7.3",
    "regenerator-runtime": "^0.13.9"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.8",
    "@babel/node": "^7.16.8",
    "@babel/plugin-proposal-export-default-from": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/bcryptjs": "^2.4.2",
    "@types/core-js": "^2.5.5",
    "@types/glob": "^7.2.0",
    "@types/koa": "^2.13.4",
    "@types/koa-compress": "^4.0.3",
    "@types/koa-graphql": "^0.8.7",
    "@types/koa-mount": "^4.0.1",
    "@types/koa-static": "^4.0.2",
    "@types/koa__cors": "^3.1.1",
    "@types/koa__router": "^8.0.11",
    "@types/node": "^17.0.25",
    "@types/passport": "^1.0.7",
    "@types/passport-jwt": "^3.0.6",
    "@types/pg": "^8.6.4",
    "babel-plugin-module-resolver": "^4.1.0",
    "env-cmd": "^10.1.0",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^2.0.0-0",
    "tsconfig-paths": "^3.14.1"
  }
}
